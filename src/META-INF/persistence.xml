<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="db_h2">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>

        <class>ua.edu.odeku.ceem.mapRadar.db.models.GeoName</class>

        <properties>
            <property name="hibernate.connection.url" value="jdbc:h2:~/.odeku/mapRadar;MVCC=true;DB_CLOSE_ON_EXIT=FALSE"/>
            <property name="hibernate.connection.driver_class" value="org.h2.Driver"/>
            <property name="hibernate.connection.username" value="ceem"/>
            <property name="hibernate.connection.password" value="db_ceem"/>
            <property name="hibernate.archive.autodetection" value="class"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
        </properties>

    </persistence-unit>

    <persistence-unit name="db_h2_server">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>

        <class>ua.edu.odeku.ceem.mapRadar.db.models.GeoName</class>

        <properties>
            <property name="hibernate.connection.url" value="jdbc:h2:~/.odeku/mapRadar;AUTO_SERVER=TRUE;MVCC=true;DB_CLOSE_ON_EXIT=FALSE"/>
            <property name="hibernate.connection.driver_class" value="org.h2.Driver"/>
            <property name="hibernate.connection.username" value="ceem"/>
            <property name="hibernate.connection.password" value="db_ceem"/>
            <property name="hibernate.archive.autodetection" value="class"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
        </properties>

    </persistence-unit>
</persistence>